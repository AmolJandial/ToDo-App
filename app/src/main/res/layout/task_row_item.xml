<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="task"
            type="com.yepyuno.todolist.data.local.models.TaskEntity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/checkmark"
            android:layout_width="@dimen/task_row_checkmark_size"
            setStatus="@{task.complete}"
            tools:src="@drawable/checkmark_selector"
            android:layout_marginStart="@dimen/task_row_horizontal_margin"
            android:layout_marginVertical="@dimen/task_row_vertical_margin"
            android:layout_height="@dimen/task_row_checkmark_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/taskName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/task_row_horizontal_margin"
            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
            app:layout_constraintBottom_toBottomOf="@+id/checkmark"
            app:layout_constraintStart_toEndOf="@+id/checkmark"
            app:layout_constraintTop_toTopOf="@+id/checkmark"
            android:text="@{task.title}"
            tools:text="Test String" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>